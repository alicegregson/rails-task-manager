<div class="top">
  <h1>My Tasks</h1>
</div>


  <% @tasks.each do |task|  %>
  <div class="task-card">
    <% if task.completed %>
        <p><i class="fas fa-check-square"></i></p>
        <% else %>
        <p><i class="far fa-square"></i></p>
      <% end %>
    <h3><%= task.title %></h3>
     <p><%= link_to "More details", task_path(task), class:"detail-link" %></p>
  </div>
    <% end %>
<br>


<div>
  <p><%= link_to "Add new task", new_task_path %></p>
</div>




